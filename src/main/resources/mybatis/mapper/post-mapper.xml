<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team.check_member.mapper.MapperMember">
    <insert id="save" parameterType="com.team.check_member.vo.Membership">
        INSERT INTO MEMBERS(MSSV, NAME, ROLE, TIMEJOIN)
        VALUES (#{members.mssv}, #{members.name}, #{members.role}, #{members.timeJoin});
    </insert>

    <select id="findAll" resultType="com.team.check_member.vo.Membership">
        SELECT *
        FROM MEMBERS;
    </select>

    <delete id="deleteMember" parameterType="java.lang.String">
        DELETE FROM MEMBERS WHERE MSSV = #{mssv}
    </delete>


</mapper>